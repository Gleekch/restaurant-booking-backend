{
  "name": "au-murmure-des-flots",
  "version": "1.0.0",
  "description": "Système de réservation Au Murmure des Flots",
  "main": "desktop/main.js",
  "author": "Au Murmure des Flots",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "desktop": "electron desktop/main.js",
    "test": "jest",
    "build-win": "electron-builder --win",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.6.3",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.aumurmuredesflots.reservation",
    "productName": "Au Murmure des Flots - Réservations",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Au Murmure des Flots"
    }
  }
}
